{
	"extends": "@tsconfig/next/tsconfig.json",
	"compilerOptions": {
		"baseUrl": "./src/",
		"paths": {
			"@/*": ["*"],
			"*": [""]
		},
		"strict": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"plugins": [
			{
				"name": "next"
			},
			{
				"name": "typescript-plugin-css-modules"
			}
		],
		"target": "esnext"
	},
	"include": [
		"*.config.js",
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"postcss.config.mjs"
	],
	"exclude": ["node_modules", "public", ".next/"]
}
